# Auralis Transcriptor backend environment example
# Copy to .env.local for local development and fill in your values.
# Never commit real secrets to the repository.

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Supabase
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_JWT_SECRET=

# Frontend (Vite) variables exposed to client
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Database
DATABASE_URL=
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_PRISMA_URL=
POSTGRES_HOST=
POSTGRES_DATABASE=
POSTGRES_USER=
POSTGRES_PASSWORD=

# AI Providers
#DEEPSEEK_API_KEY=
GEMINI_API_KEY=
#OPENAI_API_KEY=

# AWS (optional)
#AWS_ACCESS_KEY_ID=
#AWS_SECRET_ACCESS_KEY=
#AWS_REGION=us-east-1

# JWT Auth (use strong secrets in production)
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=

# Transcription
TRANSCRIPTION_PROVIDER=gemini
TRANSCRIPTION_LANGUAGE=en-US
TRANSCRIPTION_TIMEOUT=600000
TRANSCRIPTION_RETRIES=3
ENABLE_NLP_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_SPEAKER_DETECTION=true
CONFIDENCE_THRESHOLD=0.7

# Development
LOG_LEVEL=debug
MAX_FILE_SIZE=524288000
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Audio processing
FFMPEG_PATH=ffmpeg
FFMPEG_TIMEOUT=300000
AUDIO_SAMPLE_RATE=16000

# TTS
TTS_PROVIDER=system
TTS_VOICE=en
TTS_SPEED=1.0

# Security
BCRYPT_ROUNDS=10

# Queue
QUEUE_TYPE=memory
QUEUE_CONCURRENCY=3

# Python services
PYTHON_SERVICE_ENABLED=false
PYTHON_SERVICE_URL=http://localhost:8000

