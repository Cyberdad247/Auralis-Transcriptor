# ==============================================
# AI TRANSCRIPTION SERVICE KEYS
# ==============================================

# Primary AI Provider - DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Secondary AI Provider - Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI (Alternative)
OPENAI_API_KEY=your-openai-api-key-here

# AWS Transcribe (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# ==============================================
# TRANSCRIPTION CONFIGURATION
# ==============================================
TRANSCRIPTION_PROVIDER=deepseek
TRANSCRIPTION_LANGUAGE=en-US
TRANSCRIPTION_TIMEOUT=600000
TRANSCRIPTION_RETRIES=3
ENABLE_NLP_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_SPEAKER_DETECTION=true
CONFIDENCE_THRESHOLD=0.7

# ==============================================
# FILE STORAGE & UPLOAD
# ==============================================
MAX_FILE_SIZE=524288000
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# AWS S3 (Optional for file storage)
AWS_S3_BUCKET=auralis-transcriptor-files
AWS_S3_ENDPOINT=
AWS_TRANSCRIBE_OUTPUT_BUCKET=auralis-transcriptor-transcripts

# ==============================================
# AUDIO PROCESSING
# ==============================================
FFMPEG_PATH=ffmpeg
FFMPEG_TIMEOUT=300000
AUDIO_SAMPLE_RATE=16000
AUDIO_FRAME_SIZE=512
AUDIO_HOP_LENGTH=256

# ==============================================
# TEXT-TO-SPEECH
# ==============================================
TTS_PROVIDER=system
TTS_VOICE=en
TTS_SPEED=1.0
TTS_PITCH=1.0
TTS_VOLUME=1.0
TTS_OUTPUT_FORMAT=mp3
TTS_CACHE_ENABLED=true
TTS_MAX_CACHE_SIZE=100

# ==============================================
# AUDIO ANALYSIS
# ==============================================
ENABLE_VAD=true
ENABLE_NOISE_REDUCTION=true
ENABLE_PITCH_DETECTION=true

# ==============================================
# QUEUE CONFIGURATION
# ==============================================
QUEUE_TYPE=memory
QUEUE_CONCURRENCY=3
QUEUE_POLL_INTERVAL=5000
AWS_SQS_QUEUE_URL=
AWS_SQS_DLQ_URL=

# ==============================================
# SECURITY
# ==============================================
BCRYPT_ROUNDS=12

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ==============================================
# PYTHON SERVICES (OPTIONAL)
# ==============================================
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_ENABLED=false
PYTHON_SERVICE_TIMEOUT=300000
