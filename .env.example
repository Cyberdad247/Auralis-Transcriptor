# Backend Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-app.vercel.app

# Database Configuration
DATABASE_URL=your_database_url_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auralis_transcriptor
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Transcription Services
TRANSCRIPTION_PROVIDER=openai-whisper
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com

# Text-to-Speech Configuration
TTS_PROVIDER=gtts
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Google Cloud Configuration (if using Google Speech)
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_service_account_key.json

# Feature Flags
ENABLE_NLP_ANALYSIS=true
PYTHON_SERVICE_ENABLED=false
ENABLE_REAL_TIME_TRANSCRIPTION=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=500mb
ALLOWED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp3,video/mp4,video/avi

